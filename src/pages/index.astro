---
import '@fontsource/roboto';
import PokeList from "../components/PokeList";
export const seo={
  title: "Poke World",
  description: "Discover Pokemons in PokeWrold with our custome Pokemon List.",
  keywords: "Pokemon, Pokemon List, Pokemon World, PokeAPI, Poke World, Pikachu",
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{seo.title}</title>
		<meta name="description" content={seo.description} />
		<meta name="keywords" content={seo.keywords} />

	</head>

	<body >
		
		<img class="w-1/3 m-auto" src="/pokeWorldTitle.png" alt="pokemon title Card">
		<div class="flex items-center justify-center gap-3 my-6">

			<img src="/favicon.svg" class="w-10" alt="">
			<div class="text-slate-900 text-xl font-bold">

				<p >Hello , Fans have  a look at these amazing pokemons.
					
				</p>
				<p>
					You can search your favourite too.<p>
			</div>
		</div>
		<PokeList client:load />
	</body>
</html>
